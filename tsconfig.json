{
  "extends": "mandrade-ts-config",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./", 
    "baseUrl": "src",
    "paths": {
      "application/*": ["application/*"],
      "domain/*": ["domain/*"],
      "infrastructure/*": ["infrastructure/*"],
      "utils/*": ["utils/*"]
    },
    "incremental": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist"]
}
